VAR_GLOBAL {
    INTEGER X;
    CHAR Y;
    CONST INTEGER Z = 10;
}

DECLARATION {
    INTEGER I=0,A;
    FLOAT B;
    CHAR C;
    CHAR Tab[5]="hello";
}

INSTRUCTION {
X = 5;
Y = 'A';

FOR ( I = 0 : 2 : 10) {
        A = X + I;
        IF (A > 5) {
            B = 3.14;
            WRITE ("B is greater than 5");
        }
        ELSE {
            C = 'B';
            WRITE ("C is less than or equal to 5");
        }
}
    WRITE (X);

}
